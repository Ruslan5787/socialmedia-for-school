{
  "version": 2,
  "builds": [
    {
      "src": "twitter-frontend/dist/**",
      "use": "@vercel/static"
    },
    {
      "src": "twitter-backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "twitter-backend/server.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "twitter-backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "twitter-frontend/dist/$1",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}